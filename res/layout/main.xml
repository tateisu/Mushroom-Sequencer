<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
>

	<LinearLayout
    	android:layout_width="fill_parent" 
	    android:layout_height="wrap_content" 
	    android:orientation="horizontal"
	    android:background="#333333"
	    android:gravity="center"
	>
		<ImageButton
    		android:layout_width="48dp" 
	   		android:layout_height="48dp" 
		    android:id="@+id/btnComplete"
		    android:src="@drawable/ic_menu_upload"
		    android:scaleType="fitCenter"
		    android:padding="4dp"
		    android:contentDescription="button"
		/>
		<View  android:layout_width="0dp" android:layout_height="0dp"  android:layout_weight="1"  />
		<CheckBox
			android:layout_width="wrap_content" 
	   		android:layout_height="wrap_content" 
		    android:id="@+id/cbAppend"
		    android:text="@string/append"
		    android:textSize="16sp"
		    android:layout_marginRight="8dp"
		/>
		<CheckBox
			android:layout_width="wrap_content" 
	   		android:layout_height="wrap_content" 
		    android:id="@+id/cbSelection"
		    android:text="@string/selection"
		    android:textSize="16sp"
		    android:checked="true"
		    android:enabled="false"
		    android:layout_marginRight="8dp"
		/>
		<Button
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="@string/dash3"
			android:id="@+id/btnEditMenu"
		/>
		<ImageButton
    		android:layout_width="48dp" 
	   		android:layout_height="48dp" 
		    android:id="@+id/btnKeyboard"
		    android:src="@drawable/keyboard"
		    android:scaleType="fitCenter"
		    android:padding="4dp"
		    android:contentDescription="button"
		/>
	</LinearLayout>

	<TextView
    	android:layout_width="fill_parent" 
	    android:layout_height="wrap_content"
	    android:text="@string/mush_target_caption"
	    android:textColor="#ffffff"
	    android:textSize="12sp"
	/> 
	<jp.juggler.MushroomSequencer.MyEditText
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:maxLines="8"
	    android:id="@+id/etMushText"
	    android:gravity="fill_horizontal"
	/>

	<TextView
    	android:layout_width="fill_parent" 
	    android:layout_height="wrap_content"
	    android:text="@string/mush_list_caption"
	    android:textColor="#ffffff"
	    android:textSize="12sp"
	/> 

	<ListView
    	android:layout_width="fill_parent" 
	    android:layout_height="0dp" 
	   	android:layout_weight="1"
	   	android:fastScrollEnabled="true"
	    android:id="@+id/list"
	/>
</LinearLayout>
